{
  "manifest_version": 3,
  "name": "Web Automation Scripter",
  "version": "1.0.0",
  "description": "Records user actions and automates web tasks.",
  "permissions": [
    "storage",     
    "activeTab",   
    "scripting",   
    "notifications",
    "alarms"      
  ],
  "host_permissions": [
    "<all_urls>"   
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}